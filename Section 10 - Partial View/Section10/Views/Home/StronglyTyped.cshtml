@model IEnumerable<City>

<div class="container">
    <h1>Cities List</h1>

    <h2>From Main View</h2>

    <table class="city-grid">
        <thead>
            <tr>
                <th>City ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var city in Model)
                {
                    <tr>
                        <td>@city.Id</td>
                        <td>@city.Name</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" style="text-align:center;">No cities available.</td>
                </tr>
            }
        </tbody>
    </table>
    <style>
        .city-grid {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

            .city-grid th, .city-grid td {
                border: 1px solid #ccc;
                padding: 0.5rem;
                text-align: left;
            }

            .city-grid th {
                background-color: #f2f2f2;
            }
    </style>

    <h2>Tag</h2>
    <partial name="_CityGridPartialViewST" model="Model" />

    <h2>Partial Helper</h2>
    @Html.Partial("_CityGridPartialViewST", Model)

    <h2>Partial Helper Async</h2>
    @await Html.PartialAsync("_CityGridPartialViewST", Model)

    <h2>Render Partial Helper</h2>
    @{
        Html.RenderPartial("_CityGridPartialViewST", Model);
    }

    <h2> Render Partial Helper Async</h2>
    @{
        await Html.RenderPartialAsync("_CityGridPartialViewST", Model);
    }
</div>
